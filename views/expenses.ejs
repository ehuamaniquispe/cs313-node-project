<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    
        <!-- jquery cdn -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        
        <!-- css link -->
        <link rel="stylesheet" href="stylesheets/main.css">
    <title>Expenses</title>
</head>
<body>
    <div class="container">
        <h1>Expenses</h1>  

        <a class="btn btn-primary" href="/new_expense">New Expense</a>

        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Person</th>
                </tr>
            </thead>
            
            <tbody>
                <% for(var i=0; i<results.length; i++){ %>
                <tr>
                    <td><%= results[i].idexpenses %></td>
                    <td><%= results[i].expenses_description %></td>
                    <td><%= results[i].expenses_amount %></td>
                    <td><%= results[i].expenses_date %></td>
                    <td><%= results[i].familymember_name %></td>
                    <td>
                        <a href="/updateExpense">Update</a>
                        <a href="/deleteExpense">Delete</a>
                    </td>
                </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>